@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to the Quiz App!</h1>

<p>Select a quiz to get started:</p>

<!-- List of quizzes available on the home page -->
<div class="quiz-list">
    @foreach (var quiz in Model)
    {
        <div class="quiz-item">
            <h3>@quiz.Title</h3>
            <p>@quiz.Description</p>
            <a asp-action="StartQuiz" asp-controller="Quiz" asp-route-id="@quiz.Id" class="btn btn-primary">Start Quiz</a>
        </div>
    }
</div>
